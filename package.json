{
  "name": "40k-auspex",
  "version": "1.0.0",
  "description": "The 40kauspex of the week website",
  "main": "index.js",
  "devDependencies": {
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "scripts": {
    "lint-all": "prettier --check packages/**/**/*.ts && prettier --check packages/**/**/*.json",
    "install-all": "npm-run-all --parallel install:* && cd ../",
    "install:ui": "cd ui && npm i",
    "build-all": "npm-run-all --parallel build:* && cd ../",
    "build:api": "cd api && npm run build",
    "build:ui": "cd ui && npm run build",
    "build:url": "cd infrastructure/url && npm run build",
    "build:processing": "cd processing && npm run build",
    "test-all": "npm-run-all --parallel test:*",
    "package-all": "npm-run-all --parallel package:*",
    "package:api": "cd api && npm run package",
    "package:api-gateway": "cd infrastructure/apiGateway && npm run package",
    "package:api-gateway-deployment": "cd infrastructure/apiGatewayDeployment && npm run package",
    "package:database": "cd infrastructure/database && npm run package",
    "package:processing": "cd processing && npm run package",
    "package:edge": "cd infrastructure/url && npm run package",
    "package:url": "cd infrastructure/url && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evenflow58/40k-auspex.git"
  },
  "author": "Evan Johnson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/evenflow58/40k-auspex/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged 'packages/**/{src,spec}/{*.ts,*.json}'"
    }
  },
  "homepage": "https://github.com/evenflow58/40k-auspex#readme"
}
